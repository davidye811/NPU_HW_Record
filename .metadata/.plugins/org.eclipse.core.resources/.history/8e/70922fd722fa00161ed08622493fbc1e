package quickSort;

import java.util.Arrays;
import java.util.Random;

public class Solution {
	int[] arrayToSorted;
	public int[] sort(int[] arrin) {
		arrayToSorted = arrin;
		quickSort(0, arrayToSorted.length - 1);
		return arrayToSorted;
	}
	private  void quickSort(int begin,int end){
		int seed=arrayToSorted[end];
		int i = begin;
		int j = end;
		while(i<j){
			while(i<j&&arrayToSorted[i]<=seed){
				i++;
			}
			if(i<j)
			swap(arrayToSorted[i],arrayToSorted[j]);
			i++;
			while(i<j&&arrayToSorted[j]>=seed){
				j--;
			}
			if(i<j)
			swap(arrayToSorted[i],arrayToSorted[j]);
		}
		quickSort(begin,i-1);
		quickSort(j+1,end);
		
	}
	static void swap(int a,int b){
		int temp=a;
		a=b;
		b=temp;
	}
	public static void main(String[] argv){
		int[] array = {4, 1, 3, 2, 16, 9, 10, 14, 8, 7};
		System.out.println(Arrays.toString(new Solution().sort(array)));
	}
}
